---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const header = document.querySelector('header');

    window.addEventListener('scroll', function () {
      if (window.scrollY > 0) {
        header?.classList.add('is_scrolled');
      } else {
        header?.classList.remove('is_scrolled');
      }
    });
  });
</script>

<header class="layout-grid">
  <nav class="bleed">
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <div class="links">
      <div class="internal-links">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
      </div>
      <div class="social-links">
        <a href="https://twitter.com/ethrmor" target="_blank">
          <span class="sr-only">Follow me on Twitter</span>

          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24">
            <path
              fill="currentColor"
              d="M18.205 2.25h3.308l-7.227 8.26l8.502 11.24H16.13l-5.214-6.817L4.95 21.75H1.64l7.73-8.835L1.215 2.25H8.04l4.713 6.231zm-1.161 17.52h1.833L7.045 4.126H5.078z"
            ></path>
          </svg>
        </a>
        <a href="https://github.com/ethrmor" target="_blank">
          <span class="sr-only">Go to Astro's GitHub repo</span>
          <svg viewBox="0 0 16 16" aria-hidden="true" width="20" height="20"
            ><path
              fill="currentColor"
              d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
            ></path></svg
          >
        </a>
      </div>
    </div>
  </nav>
</header>
<style>
  header {
    position: sticky;
    top: 0;
    z-index: 50;
    backdrop-filter: blur(10px);
    margin: 0;
    border-block-end: 1px solid #f0f0f0;
    background: white;
    background-color: rgba(255, 255, 255, 0.6); /* Assuming bg-background is white with 95% opacity */
    width: 100%;
    min-height: 3rem;
  }
  .is_scrolled {
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 {
    margin: 0;
    font-size: var(--fs-md);
  }
  h2 a {
    color: inherit;
    text-decoration: none;
  }
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .links {
    display: flex;
    align-items: center;
  }
  .links a {
    margin-block: 0.5rem;
    border-radius: 0.5rem;
    padding: 0.25rem 0.5rem;
    color: var(--black);
    line-height: 1;
    text-decoration: none;
  }
  .links:has(a:hover) a:not(:hover) {
    color: gray;
  }
  .links a:hover {
    color: var(--accent);
  }
  .links a.active {
    color: var(--accent);
    font-weight: bold;
  }
  .internal-links {
    display: flex;
  }
  .social-links,
  .social-links a {
    display: flex;
  }
  .social-links a {
    border-radius: 0.5em;
    padding: 0.5em;
  }
  .social-links a:hover {
    /* background-color: color-mix(in oklch, var(--accent) 5%, transparent 95%); */
    color: var(--accent);
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>
