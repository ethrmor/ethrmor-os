---
import { Image } from 'astro:assets';

const { title, image, code_link, live_link, link, height, width, alt } = Astro.props;
---

<article>
	<header>
		<a href={link}><h3>{title}</h3></a>
	</header>
	<a href={link}><Image src={image} height={height} width={width} alt={alt} /></a>
	<footer>
		<a href={live_link} class='button'
			><span>Live Site</span><svg width='20' height='20' viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'
				><path
					fill='currentColor'
					d='M128 24a104 104 0 1 0 104 104A104.11 104.11 0 0 0 128 24m-26.37 144h52.74C149 186.34 140 202.87 128 215.89c-12-13.02-21-29.55-26.37-47.89M98 152a145.72 145.72 0 0 1 0-48h60a145.72 145.72 0 0 1 0 48Zm-58-24a87.61 87.61 0 0 1 3.33-24h38.46a161.79 161.79 0 0 0 0 48H43.33A87.61 87.61 0 0 1 40 128m114.37-40h-52.74C107 69.66 116 53.13 128 40.11c12 13.02 21 29.55 26.37 47.89m19.84 16h38.46a88.15 88.15 0 0 1 0 48h-38.46a161.79 161.79 0 0 0 0-48m32.16-16h-35.43a142.39 142.39 0 0 0-20.26-45a88.37 88.37 0 0 1 55.69 45M105.32 43a142.39 142.39 0 0 0-20.26 45H49.63a88.37 88.37 0 0 1 55.69-45M49.63 168h35.43a142.39 142.39 0 0 0 20.26 45a88.37 88.37 0 0 1-55.69-45m101.05 45a142.39 142.39 0 0 0 20.26-45h35.43a88.37 88.37 0 0 1-55.69 45'
				></path></svg
			></a
		>
		<a href={code_link} class='button'
			><span>View Code</span><svg viewBox='0 0 16 16' aria-hidden='true' width='20' height='20'
				><path
					fill='currentColor'
					d='M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z'
				></path></svg
			></a
		>
	</footer>

	<style>
		article {
			display: flex;
			flex-direction: column;
			align-items: start;
		}
		header {
			display: flex;
			justify-content: center;
			align-items: center;
			gap: 0.5em;
		}
		h3 {
			width: fit-content;
			font-weight: 500;
			font-size: var(--fs-md);
		}
		img {
			border-radius: 0.5rem;
			aspect-ratio: 16/9;
		}
		a {
			display: flex;
			margin: 0;
			text-decoration: none;
		}
		:where(a, h3):where(:hover, :focus) {
			color: oklch(var(--accent));
		}
		footer {
			display: flex;
			align-items: center;
			gap: 0.5em;
			margin-top: 0.5em;
			width: 100%;
		}
		.button {
			display: flex;
			justify-content: center;
			align-items: center;
			gap: 0.5rem;
			border-radius: 0.5em;
			background-color: oklch(var(--gray-75));
			padding: 0.25em 0.5em;
			color: oklch(var(--white));
		}
		.button:hover {
			background-color: oklch(var(--gray-75) / 85%);
		}
	</style>
</article>
