---
import { Image } from 'astro:assets';

const { title, image, code_link, live_link, link, height, width, alt } = Astro.props;
---

<article>
	<header>
		<a href={link}><h3>{title}</h3></a>
	</header>
	<div class='image-group'>
		<a href={link}><Image src={image} height={height} width={width} alt={alt} /></a>
		<div class='button-group'>
			<a href={live_link} title='View Live Site'
				><span class='sr-only'>Go to the GitHub repo</span><svg
					width='20'
					height='20'
					viewBox='0 0 24 24'
					xmlns='http://www.w3.org/2000/svg'
					><path
						fill='none'
						stroke='currentColor'
						stroke-linecap='round'
						stroke-linejoin='round'
						stroke-width='2'
						d='M10 6H6a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2v-4M14 4h6m0 0v6m0-6L10 14'></path></svg
				></a
			>
			<a href={code_link} target='_blank' title='View Code on Github'>
				<span class='sr-only'>Go to the GitHub repo</span>
				<svg viewBox='0 0 16 16' aria-hidden='true' width='20' height='20'
					><path
						fill='currentColor'
						d='M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z'
					></path></svg
				>
				<a href={live_link} title='View Live Site'
					><span class='sr-only'>Go to the GitHub repo</span><svg
						width='20'
						height='20'
						viewBox='0 0 24 24'
						xmlns='http://www.w3.org/2000/svg'
						><path
							fill='none'
							stroke='currentColor'
							stroke-linecap='round'
							stroke-linejoin='round'
							stroke-width='2'
							d='M10 6H6a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2v-4M14 4h6m0 0v6m0-6L10 14'></path></svg
					></a
				>
			</a>
		</div>
	</div>

	<style>
		article {
			display: flex;
			flex-direction: column;
			align-items: start;
		}
		header {
			display: flex;
			justify-content: center;
			align-items: center;
			gap: 0.5em;
		}
		h3 {
			width: fit-content;
			font-size: var(--fs-md);
		}
		img {
			border-start-start-radius: 0.5rem;
			border-start-end-radius: 0.5rem;
			aspect-ratio: 16/9;
		}
		a {
			display: flex;
			margin: 0;
			text-decoration: none;
		}
		:where(a, h3):where(:hover, :focus) {
			color: var(--accent);
		}
		.image-group {
			border-radius: 0.5rem;
			overflow: hidden;
		}
		.button-group {
			display: flex;
			justify-content: center;
			align-items: center;
			background-color: var(--accent);
			width: 100%;
		}
		.button-group a {
			flex: 1;
			justify-content: center;
			align-items: center;
			padding: 0.5em;
			color: white;
		}
		.button-group a:hover {
			background-color: var(--accent-dark);
		}
	</style>
</article>
