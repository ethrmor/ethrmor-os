---
import { Image } from 'astro:assets';

const { title, image, code, link, height, width, alt } = Astro.props;
---

<article>
	<header>
		<a href={link} title='Live Site' class='title'
			><h3>{title}</h3>
			<svg width='20' height='20' viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg'
				><path
					fill='none'
					stroke='currentColor'
					stroke-linecap='round'
					stroke-linejoin='round'
					stroke-width='2'
					d='M15 3h6v6m-11 5L21 3m-3 10v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6'></path></svg
			></a
		>
		<a href={code} title='View Code on GitHub' class='github'
			><svg viewBox='0 0 16 16' aria-hidden='true' width='20' height='20'
				><path
					fill='currentColor'
					d='M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z'
				></path></svg
			></a
		>
	</header>
	<a href={link}><Image src={image} height={height} width={width} alt={alt} /></a>
	<footer></footer>

	<style>
		article {
			display: flex;
			flex-direction: column;
			align-items: start;
		}
		header {
			display: flex;
			justify-content: center;
			align-items: center;
			gap: 0.5em;
			padding-block-end: 0.5em;
		}
		h3 {
			margin-block-end: 0;
			font-weight: 400;
		}
		img {
			border-radius: 0.5rem;
			aspect-ratio: 16/9;
		}
		a {
			display: flex;
			margin: 0;
			text-decoration: none;
		}
		.title:is(:hover, :focus, :active) :where(h3, svg) {
			color: oklch(var(--accent));
		}
		article:has(img:hover) .title :where(h3, svg) {
			color: oklch(var(--accent));
		}
		article:has(.title:hover) img {
			opacity: 0.8;
		}
		.title {
			display: flex;
			align-items: center;
			gap: 0.5rem;
		}
	</style>
</article>
